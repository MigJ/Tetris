#include "tetriminos.h"

static int	check(char *s1, char *s2)
{
  int	i;

  i = 0;
  while (s1[i] != '\0' && s2[i] != '\0')
    {
      if (s1[i] >= 'a' && s1[i] <= 'z' && s2[i] >= 'a' && s2[i] <= 'z')
	{
	  if (s1[i] == s2[i])
	    i++;
	  else if (s1[i] > s2[i])
	    {
	      return (1);
	    }
	}
      if (s1[i] > s2[i])
	return (1);
    }
  return (0);
}

int	order_ascii(t_game *game)
{
  t_tetrimino	*now;
  t_tetrimino	*tmp;

  now = game->first;
  tmp = game->first->next;
  while (now != NULL && tmp != NULL)
    {
      if (check(now->name, tmp->name))
	{
	  if (now == game->first)
	    game->first = tmp;

	  tmp2 = tmp-w>next;
	  
	  now = game->first;
	  tmp = game->first->next;
	  continue;
	}
      now = now->next;
      tmp = tmp->next;
    }
  return (0);
}
